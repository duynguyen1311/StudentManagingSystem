@page
@model StudentManagingSystem.Pages.DepartmentPage.AddDepartmentModel
@{
}

<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Form</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="Department">Department List</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Add Department</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="DepartmentAddRequest.DepartmentName" class="col-sm-12 col-md-2 col-form-label">Department Name</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="DepartmentAddRequest.DepartmentName" class="form-control" type="text" placeholder="Input department name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="DepartmentAddRequest.DepartmentCode" class="col-sm-12 col-md-2 col-form-label">Department Code</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="DepartmentAddRequest.DepartmentCode" class="form-control" type="text" placeholder="Input department code">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="DepartmentAddRequest.Status" class="col-sm-12 col-md-2 col-form-label">Status</label>
                        <div class="col-sm-12 col-md-10">
                            <select asp-for="DepartmentAddRequest.Status" class="custom-select col-12">
                                <option selected="">Choose...</option>
                                <option value="true">True</option>
                                <option value="false">False</option>
                            </select>
                        </div>
                    </div>
                    <div class="btn-list">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-page="Department" type="submit" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
            <!-- Default Basic Forms End -->

        </div>
    </div>
