@page
@model StudentManagingSystem.Pages.ClassroomPage.UpdateClassRoomModel
@{
}
<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        @*<div class="title">
                        <h4>Form</h4>
                        </div>*@
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="ClassRoomPage/ClassRoom">Class List</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Update Class</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="ClassRoom.ClassName" class="col-sm-12 col-md-2 col-form-label">Class Name</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="ClassRoom.ClassName" class="form-control" type="text" placeholder="Class name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ClassRoom.ClassCode" class="col-sm-12 col-md-2 col-form-label">Class Code</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="ClassRoom.ClassCode" class="form-control" type="text" placeholder="Class code">
                        </div>
                    </div>
                    <div class="btn-list">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-page="Class" type="submit" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
            <!-- Default Basic Forms End -->

        </div>
    </div>
